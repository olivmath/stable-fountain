# ========================================
# FOUNTAIN BACKEND - LOCAL ENV (Supabase)
# ========================================

# Server
NODE_ENV=development
PORT=3033

# Database (Supabase Postgres)
DB_HOST=db.myproject.supabase.co
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=passworld
DB_NAME=fountain_db

# Auth (JWT)
JWT_SECRET=you_secret
JWT_EXPIRATION=7d

# Redis (optional; has default)
REDIS_URL=redis://localhost:6379

# Webhooks & Async (defaults exist)
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# ========================================
# XRPL INTEGRATION
# ========================================
XRPL_NETWORK=testnet
XRPL_WEBSOCKET_URL=wss://s.altnet.rippletest.net:51233
XRPL_JSON_RPC_URL=https://s.altnet.rippletest.net:51234

# ========================================
# INTEGRATION: ASAS (PIX PROVIDER)
# ========================================
ASAS_API_URL=https://api.asas.com.br/v1
ASAS_CLIENT_ID=your_client_id
ASAS_CLIENT_SECRET=your_secret
ASAS_WEBHOOK_SECRET=your_webhook_secret

# ========================================
# INTEGRATION: BINANCE (XRP CONVERSIONS)
# ========================================
BINANCE_API_URL=https://api.binance.com
BINANCE_API_KEY=your_api_key
BINANCE_API_SECRET=your_secret
BINANCE_DEFAULT_SLIPPAGE=0.5

# ========================================
# DEPOSIT & OPERATIONS
# ========================================
DEPOSIT_TIMEOUT_MINUTES=10
WEBHOOK_HMAC_SECRET=your_hmac_secret
