# ========================================
# FOUNTAIN BACKEND - LOCAL ENV (Supabase)
# ========================================

# Server
NODE_ENV=development
PORT=3033

# Database (Supabase Postgres)
DB_HOST=db.myproject.supabase.co
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=passworld
DB_NAME=postgres

# Auth (JWT)
JWT_SECRET=you_secret
JWT_EXPIRATION=7d

# Redis (optional; has default)
REDIS_URL=redis://localhost:6379

# Webhooks & Async (defaults exist)
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# Stablecoin collateral ratios
COLLATERAL_RATIO_MIN=150
COLLATERAL_RATIO_EMERGENCY=120
