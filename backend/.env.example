# ========================================
# WEBHOOKS & ASYNC PROCESSING
# ========================================
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000

# ========================================
# COLLATERALIZATION RATIOS (Stablecoin Pool)
# ========================================
# Minimum ratio required for new mint operations (150%)
COLLATERAL_RATIO_MIN=150
# Emergency threshold - critical if below (120%)
COLLATERAL_RATIO_EMERGENCY=120

